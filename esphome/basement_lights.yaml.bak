esphome:
  name: basement_lights
  platform: ESP32
  board: nodemcu-32s

wifi:
  ssid: !secret AP
  password: !secret APPW

# Enable logging
logger:

# Enable Home Assistant API
api:
  password: !secret AP_PW

ota:
  password: !secret OTA_PW
 
    
light:
  - platform: fastled_clockless
    chipset: WS2811
    pin: GPIO13
    num_leds: 150
    rgb_order: BRG
    name: "basement_shelf_0"
    max_refresh_rate: 16ms
    id: bsl1
    
  - platform: fastled_clockless
    chipset: WS2811
    pin: GPIO14
    num_leds: 150
    rgb_order: BRG
    name: "basement_shelf_1"
    max_refresh_rate: 16ms
    id: bsl2
    
  - platform: fastled_clockless
    chipset: WS2811
    pin: GPIO15
    num_leds: 150
    rgb_order: BRG
    name: "basement_shelf_2"
    max_refresh_rate: 16ms
    id: bsl3
    
  - platform: fastled_clockless
    chipset: WS2811
    pin: GPIO16
    num_leds: 150
    rgb_order: BRG
    name: "basement_shelf_3"
    max_refresh_rate: 16ms
    id: bsl4
    
  - platform: partition
    name: "Basement Total"
    segments:
      - id: bsl1
        from: 0
        to: 150
      - id: bsl2
        from: 0
        to: 150
      - id: bsl4
        from: 0
        to: 150
      - id: bsl4
        from: 0
        to: 150
