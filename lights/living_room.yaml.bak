- platform : mqtt
  name: "Jayhawk Candle"
  state_topic: "/Jayhawk_Candle/relay/switch"
  command_topic: "/Jayhawk_Candle/gpio/12"
  payload_on: "1"
  payload_off: "0"
  retain: true

- platform : mqtt
  name: "LR_dimmer"
  state_topic: "hawirelesslink/light/linear_pd300z2_plugin_dimmer_module_level/state"
  command_topic: "/HAwirelesslink/return/light/linear_pd300z2_plugin_dimmer_module_level/state"
  brightness_state_topic: "hawirelesslink/light/linear_pd300z2_plugin_dimmer_module_level/brightness"
  brightness_command_topic: "/HAwirelesslink/return/light/linear_pd300z2_plugin_dimmer_module_level/brightness"
  payload_on: "on"
  payload_off: "off"
  retain: true

- platform : mqtt
  name: livingroom_entry
  state_topic: "hawirelesslink/light/livingroom_entry/state"
  command_topic: "/HAwirelesslink/return/light/livingroom_entry/state"
  brightness_state_topic: "hawirelesslink/light/livingroom_entry/brightness"
  brightness_command_topic: "/HAwirelesslink/return/light/livingroom_entry/brightness"
  payload_on: "on"
  payload_off: "off"
  retain: true
